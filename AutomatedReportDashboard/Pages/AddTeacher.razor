@page "/AddTeacher"
@inject DataService Data;

<h3>AddTeacher</h3>
<a href="/Home" class="btn btn-warning">عودة الى الرئيسية</a>
<div class="add-data-teacher">
    <div class="section-title">
        <h4>إضافة مدرس جديد :</h4>
        <br />
    </div>
    <div class="row g-2">
        <div class="col-md">
            <div class="form-floating">
                <input @bind=requste.full_Name type="text" class="form-control" id="teacherName" placeholder="">
                <label for="studentName" class="text-center">اسم المدرس</label>
            </div>
        </div>
        <div class="col-md">
            <div class="form-floating">
                <input @bind=requste.phone type="text" class="form-control" id="teacherNumber" placeholder="">
                <label for="teacherNumber" class="text-center">رقم الهاتف</label>
            </div>
        </div>
    </div>
    <div class="btn-action">
        <a href="/TeacherManager"
        onclick=@(() => SaveTeacher())>
            <img src="../assets/Img/save.png" alt="">
            <span>
                حفظ
            </span>
        </a>
    </div>

</div>
@code
{
    private AddTeacherRequste requste = new();
    private async void SaveTeacher()
    {
        var resulte = await Data.AddTeacher(requste);
    }
}