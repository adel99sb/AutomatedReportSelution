@page "/EditeDivision"

<h3>EditeDivision</h3>
<div class="add-data-section">
    <div class="section-title">
        <h4>تعديل شعبة :</h4>
        <br />
    </div>

    <div class="row g-2">
        <div class="col-md">
            <div class="form-floating">
                <input type="text" class="form-control" id="sectionName" placeholder="">
                <label for="studentName" class="text-center">اسم الشعبة</label>
            </div>
        </div>
        <div class="col-md">
            <div class="form-floating">
                <select class="form-select" id="cirtTypeforSectionData" aria-label="Floating label select example">
                    <option value="1">تاسع</option>
                    <option value="2">بكلوريا علمي</option>
                    <option value="3">بكلوريا أدبي</option>
                </select>
                <label for="studentClass">الشهادة</label>
            </div>
        </div>
    </div>
    <div class="btn-action">
        <a href="showSection.html">
            <img src="../assets/Img/save.png" alt="">
            <span>
                حفظ
            </span>
        </a>
    </div>
</div>
